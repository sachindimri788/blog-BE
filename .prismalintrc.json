{
  "rules": {
    "field-name-mapping-snake-case": ["error"],
    "field-order": [
      "error",
      {
        "order": ["id", "...", "created_at", "updated_at"]
      }
    ],
    "forbid-required-ignored-field": ["error"],
    "model-name-grammatical-number": [
      "error",
      {
        "style": "singular"
      }
    ],
    "model-name-mapping-snake-case": ["error"],
    "require-field-index": [
      "error",
      {
        "forAllRelations": false
      }
    ],
    "require-field-type": [
      "error",
      { "require": [{ "ifName": "/_at$/", "type": "DateTime" }] }
    ],
    "require-field": [
      "error",
      { "require": ["id", "created_at", "updated_at"] }
    ]
  }
}
